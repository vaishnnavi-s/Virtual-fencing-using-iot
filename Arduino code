#include <SPI.h>
#include <MFRC522.h>
#include <Keypad.h>
#include <Servo.h>
#include <Wire.h>
#include "RTClib.h"

#define LDR A0
#define BUZZER 8
#define SS_PIN 53
#define RST_PIN 5

MFRC522 mfrc522(SS_PIN, RST_PIN);
RTC_DS1307 rtc;
Servo myServo;

int threshold = 500;
String correctPassword = "1234";
String inputPassword = "";

// Keypad setup
const byte ROWS = 4;
const byte COLS = 4;
char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};

byte rowPins[ROWS] = {22, 23, 24, 25};
byte colPins[COLS] = {26, 27, 28, 29};

Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

void setup() {
  Serial.begin(9600);
  SPI.begin();
  mfrc522.PCD_Init();
  rtc.begin();
  myServo.attach(9);

  pinMode(BUZZER, OUTPUT);
  pinMode(LDR, INPUT);

  Serial.println("Virtual Fence System Started");
}

void loop() {

  // ðŸ”¹ Laser-LDR Intrusion Detection
  int ldrValue = analogRead(LDR);
  if (ldrValue < threshold) {
    DateTime now = rtc.now();
    Serial.print("Intrusion Detected at: ");
    Serial.print(now.timestamp());
    Serial.println();

    digitalWrite(BUZZER, HIGH);
    myServo.write(90); // Move servo
    delay(2000);
    digitalWrite(BUZZER, LOW);
    myServo.write(0);
  }

  // ðŸ”¹ RFID Authentication
  if (mfrc522.PICC_IsNewCardPresent() && mfrc522.PICC_ReadCardSerial()) {
    Serial.println("RFID Card Detected");
    digitalWrite(BUZZER, LOW);
    mfrc522.PICC_HaltA();
  }

  // ðŸ”¹ Keypad Password
  char key = keypad.getKey();
  if (key) {
    if (key == '#') {
      if (inputPassword == correctPassword) {
        Serial.println("Access Granted");
        digitalWrite(BUZZER, LOW);
      } else {
        Serial.println("Access Denied");
        digitalWrite(BUZZER, HIGH);
        delay(1000);
        digitalWrite(BUZZER, LOW);
      }
      inputPassword = "";
    } else {
      inputPassword += key;
    }
  }
}
